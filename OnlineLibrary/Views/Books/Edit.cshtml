@model OnlineLibrary.Models.Book

@{
    ViewData["Title"] = "Редактировать";
}

<h1 class="text-center mb-4">Редактирование книги</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
            <div class="form-group mb-3">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Название</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-book"></i></span>
                    <input asp-for="Title" class="form-control" placeholder="Введите название книги" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Author" class="form-label">Автор</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Author" class="form-control" placeholder="Введите автора" />
                </div>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                    <textarea asp-for="Description" class="form-control" placeholder="Введите описание"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="FilePath" class="form-label">Загрузить файл книги</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-upload"></i></span>
                    <input asp-for="FilePath" type="file" class="form-control" />
                </div>
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Сохранить" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку книг</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
